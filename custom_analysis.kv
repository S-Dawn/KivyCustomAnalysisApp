<MainScreen>:
    name:"main"

    oven_length : oven_length_id
    biscuit_length : biscuit_length_id
    pitch : pitch_id
    cup_length : cup_length_id
    cup_width : cup_width_id
    baking_time_mins : mins_id
    baking_time_secs : secs_id
    mass : mass_id

    GridLayout:
        cols : 1
        size : root.width, root.height

        GridLayout:
            cols:2

            Label:
                text:"Oven Length: "
            TextInput:
                id: oven_length_id
                multiline:False
                hint_text:"Ft"

            Label:
                text:"Biscuit Length or Diameter: "
            TextInput:
                id: biscuit_length_id
                multiline:False
                hint_text:"mm"

            Label:
                text:"Mass of 1pc biscuit: "
            TextInput:
                id: mass_id
                multiline:False
                hint_text : "gm"


            Label:
                text:"Pitch: "
            TextInput:
                id: pitch_id
                multiline:False
                hint_text:"mm"

            Label:
                text:"Cup no: "
            GridLayout:
                cols:3
                TextInput:
                    id:cup_length_id
                    multiline:False
                Label:
                    text:" X "
                TextInput:
                    id:cup_width_id
                    multiline:False

            Label:
                text:"Baking Time: "
            GridLayout:
                cols:2
                TextInput:
                    id:mins_id
                    multiline:False
                    hint_text:"mins"
                TextInput:
                    id:secs_id
                    multiline:False
                    hint_text:"secs"

        Button:
            text:"Calculate"
            size_hint: 0.3, 0.3
            font_size:(root.width**2 + root.height**2) / 14**4
            color: 0.3, 0.5, 0.7, 1
            on_release:
                root.manager.transition.direction = "right"
                root.calculate()
        Button:
            text:"Last Value"
            size_hint: 0.3, 0.3
            font_size:(root.width**2 + root.height**2) / 14**4
            color: 0.3, 0.5, 0.7, 1
            on_release:
                root.manager.transition.direction = "right"
                root.previous_value()


<ResultScreen>:
    name:"result"

    oven_length : oven_length_id
    biscuit_length : biscuit_length_id
    pitch : pitch_id
    cup : cup_id
    mass : mass_id
    baking_time : baking_time_id
    rpm : rpm_id
    production_per_min : ppm_id

    GridLayout:
        cols:1

        Label:
            id: oven_length_id
            text: "Oven Length: "

        Label:
            id: biscuit_length_id
            text: "Biscuit Length: "

        Label:
            id: mass_id
            text: "Mass of 1pc biscuit: "

        Label:
            id: pitch_id
            text: "Pitch: "

        Label:
            id: cup_id
            text: "Cup no: "

        Label:
            id: baking_time_id
            text: "Baking time"
        Label:
            id: rpm_id
            text: "RPM: "
            font_size: (root.width**2 + root.height**2) / 14**4
        Label:
            id: ppm_id
            text: "Production per minute: "
            font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            text: "Back"
            on_release:
                root.manager.transition.direction = "left"
                root.go_back()
